<h1>「ユーザー」一覧</h1>
<table>
<% @users.each do |user| %>
<tr>
  <td><%= link_to user.name, user, class: ""%></td>
  <td>タスク数:<%= user.tasks.count %></td>
  <td><%= link_to t('view.show'), admin_user_path(user) %></td>
  <td><%= link_to t('view.edit'), edit_admin_user_path(user) %></td>
  <td><%= link_to t('view.destroy'), admin_user_path(user.id), method: :delete, data: { confirm: t('view.destroy message') } %></td>
<% end %>
</tr>
</table>
<%= link_to '新規ユーザー登録', new_admin_user_path %>