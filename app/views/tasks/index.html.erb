<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>

<table>
  <thead>
    <tr>
      <th><%= t('view.name') %></th>
      <th><%= t('view.detail') %></th>
      <th><%= t('view.deadline') %></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.detail %></td>
        <td class="date_row"><%= task.deadline %></td>
        <td><%= link_to t('view.show'), task, class: "show"%></td>
        <td><%= link_to t('view.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('view.destroy'), task, method: :delete, data: { confirm: t('view.destroy message') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('view.new task'), new_task_path %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
