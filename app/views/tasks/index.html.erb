<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>



<table class="table-search">
  <tr class="search">
    <%= form_with(url:tasks_path,local: true,method: :get) do |form| %>
      <td class="td-search">
        <p><%= form.label :name, t('view.name') %></p>
        <p><%= form.text_field :name, value: params[:name] %></p>
      </td>
      <td class="td-search">
        <p><%= form.label :status, t('view.status') %></p>
        <p><%= form.select :status,Task.statuses.keys.map {|k| [I18n.t("enums.task.status.#{k}"), k]}, selected: params[:status],include_blank:"選択する" %></p>
        <%= form.hidden_field :search, value: 'true' %>
      </td>
      <td class="td-submit">
        <br>
        <%= form.submit t('view.search') %>
      </td>
    <% end %>
  </tr>
</table>


<table>
  <thead>
    <tr class="tr-main">
      <th class="overflow"><%= t('view.name') %></th>
      <th class="overflow"><%= t('view.detail') %></th>
      <th class="color-black overflow"><%= link_to t('view.deadline'), tasks_path(sort_expired: "true") %></th>
      <th class="overflow"><%= t('view.status') %></th>
      <th class="color-black overflow"><%= link_to t('view.priority'), tasks_path(sort_priority: "true") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="tr-main">
        <td class="overflow"><%= task.name %></td>
        <td class="overflow"><%= task.detail %></td>
        <td class="date_row"><%= task.deadline %></td>
        <td><%= task.status_i18n %></td>
        <td class="date_priority"><%= task.priority_i18n %></td>
        <td class="link-fence"><%= link_to t('view.show'), task, class: "show"%></td>
        <td class="link-fence fence"><%= link_to t('view.edit'), edit_task_path(task) %></td>
        <td class="link-fence fence destroy"><%= link_to t('view.destroy'), task, method: :delete, data: { confirm: t('view.destroy message') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<span class=" new-create">
  <%= link_to t('view.new task'), new_task_path %>
</span>
<p><%= paginate @tasks %></p>