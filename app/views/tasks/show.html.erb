<p id="notice"><%= notice %></p>
<h1>タスク詳細</h1>
<table class="show-table">
  <tr class="show-tr">
    <td class="show-subject"><%= t('view.name') %></td>
    <td class="show-content"><%= @task.name %></td>
  </tr>

  <tr class="show-tr">
    <td class="show-subject"><%= t('view.detail') %></td>
    <td class="show-content"><%= @task.detail %></td>
  </tr>

  <tr class="show-tr">
    <td class="show-subject"><%= t('view.deadline') %></td>
    <td class="show-content"><%= @task.deadline %></td>
  </tr>

  <tr class="show-tr">
    <td class="show-subject"><%= t('view.status') %></td>
    <td class="show-content"><%= @task.status_i18n %></td>
  </tr>

  <tr class="show-tr">
    <td class="show-subject"><%= t('view.priority') %></td>
    <td class="show-content"><%= @task.priority_i18n %></td>
  </tr>
</table>


<%= link_to t('view.back'), tasks_path %> |
<%= link_to t('view.edit'), edit_task_path(@task) %> |
<%= link_to t('view.destroy'), @task, method: :delete, data: { confirm: t('view.destroy message') } %>